CREATE TRIGGER trg_UpdateTimestamp_Customers
ON customers
AFTER UPDATE
AS
BEGIN
    UPDATE customers
    SET updateAt = GETDATE()
    FROM customers t
        INNER JOIN inserted i ON t.id = i.id;
END;
GO

